<Window x:Class="ScreenLightSpreader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenLightSpreader.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Status:" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="26" Margin="16,16,16,17"/>
        <Label Content="Url" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="26" HorizontalAlignment="Center"/>
        <Label Content="RGB Contoller"  Grid.Column="4" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="25" Margin="20,0,19,0" Width="84"/>
        <TextBox Grid.Column="2" Height="22" Grid.Row="2" TextWrapping="Wrap" Text="{Binding IpAdress}" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" Margin="0,13"/>
        <Button Content="Save settings"  Command="{Binding SaveSettingsCommand}"  VerticalAlignment="Center" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Center" VerticalContentAlignment="Top" Height="20" Margin="10,14" Width="74"/>
        <CheckBox Content="Running" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" IsChecked="{Binding Automode, UpdateSourceTrigger=PropertyChanged}" Height="15" Grid.ColumnSpan="2" IsEnabled="False"/>
        <Button Content="Start" Grid.Column="3" HorizontalAlignment="Left" Margin="0,74,0,0" Grid.Row="4" VerticalAlignment="Top" Width="207"/>
        <CheckBox Content="Set Running on start" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center"/>
        <Label Content="Autostart" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="26" HorizontalAlignment="Center"/>

    </Grid>
</Window>
