<Window x:Class="ScreenLightSpreader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenLightSpreader.ViewModel"
        
        mc:Ignorable="d"
        Title="Screen Light Spreader" Height="350" Width="525" MinWidth="505" MinHeight="235">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Status:" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="26" Grid.ColumnSpan="2"/>
        <Label Content="IP-Adress:" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="26" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="3" Height="22" Grid.Row="3" TextWrapping="Wrap" Text="{Binding IpAdress, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"/>
        <Button Content="Save settings"  Command="{Binding SaveSettingsCommand}"  VerticalAlignment="Center" Grid.Column="4" Grid.Row="6" HorizontalAlignment="Center" VerticalContentAlignment="Top" Height="20" Width="74"/>
        <CheckBox Content="Running" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" IsChecked="{Binding Running, UpdateSourceTrigger=PropertyChanged}" Height="14" Grid.ColumnSpan="4" IsEnabled="False"/>
        <Button Content="{Binding BtnStartText}" Command="{Binding StartCommand, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="7" VerticalAlignment="Center" Grid.ColumnSpan="3" Height="20"/>
        <CheckBox Content="Set Running on start" IsChecked="{Binding IsAutostarting}" Grid.Column="3" Grid.Row="4" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="14" />
        <Label Content="Autostart" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="26" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <Button Content="RGB-Controller" Command="{Binding TempOpenLedControllerCommand}" Grid.Column="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Port:" Grid.Column="5" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" RenderTransformOrigin="0.625,0.423"/>
        <TextBox Grid.Column="6" Height="22" Grid.Row="3" TextWrapping="Wrap" Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"/>
        <Label Content="Connected" Visibility="{Binding ConnectedVisibility}" HorizontalAlignment="Left" Grid.Row="8" VerticalAlignment="Top" Width="75" Background="#FF8DFB88" Grid.ColumnSpan="2"/>
        <Label Content="github.com/getraid/ScreenLightSpreader" VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="8" HorizontalAlignment="Left"/>
        <Label Content="Buffer" Grid.Column="5" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Grid.Column="6" Height="22" Grid.Row="4" TextWrapping="Wrap" Text="{Binding BufferTime, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"/>
        <Label Content="ms" Grid.Column="7" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>


    </Grid>

</Window>
